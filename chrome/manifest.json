{
  "manifest_version": 2,

  "name": "BitBucket Selfies",
  "description": "Selfies! For BitBucket! Hooray!",
  "version": "1.4",

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "permissions": [
    "https://bitbucket.org/*",
    "http://bitbucket.org/*"
  ],

  "content_scripts": [
    {
      "js": ["jquery.min.js", "selfie-base.js", "compare.js", "b64.js", "GIFEncoder.js", "LZWEncoder.js", "NeuQuant.js"],
      "matches": ["*://bitbucket.org/*/pull-request/*"],
      "run_at": "document_end",
      "css": ["compare.css"]
    },
    {
      "js": ["jquery.min.js", "selfie-base.js", "pull.js", "b64.js", "GIFEncoder.js", "LZWEncoder.js", "NeuQuant.js"],
      "matches": ["*://bitbucket.org/*/pull/*"],
      "run_at": "document_end",
      "css": ["pull.css"]
    },
    {
      "js": ["jquery.min.js", "selfie-base.js", "new-issue.js", "b64.js", "GIFEncoder.js", "LZWEncoder.js", "NeuQuant.js"],
      "matches": ["*://bitbucket.org/*/issues/new"],
      "run_at": "document_start"
    },
    {
      "js": ["jquery.min.js", "selfie-base.js", "issues.js", "b64.js", "GIFEncoder.js", "LZWEncoder.js", "NeuQuant.js"],
      "matches": ["*://bitbucket.org/*/issues/*"],
      "exclude_matches": ["*://bitbucket.org/*/issues/new"],
      "run_at": "document_start"
    }
  ],

  "web_accessible_resources": [
    "jquery-1.10.1.min.map",
    "new-issue.css",
    "issues.css"
  ]

}
